package components

import "musiikkiProjektit/utils"
import "strconv"

templ NoteDisplay(notes []utils.Note){
    if len(notes) == 0 {
        <p>No notes found</p>
    } else {
        for _, note := range notes {
            <div id={"note_containder_" + strconv.Itoa(note.Id)}>
                <div id={"note" + strconv.Itoa(note.Id)}>
                    <h3>{note.Title}</h3>
                    <p>{note.Note}</p>
                </div>
                <div>
                    <button>Edit</button>
                    <button>Delete</button>
                </div>
            </div>
        }
    }
}
